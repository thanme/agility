<h1>Listing handlers</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Reg</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @handlers.each do |handler| %>
      <tr>
        <td><%= handler.first_name %></td>
        <td><%= handler.last_name %></td>
        <td><%= handler.reg %></td>
        <td><%= handler.email %></td>
        <td><%= link_to 'Show', handler %></td>
        <td><%= link_to 'Edit', edit_handler_path(handler) %></td>
        <td><%= link_to 'Destroy', handler, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

